/ {
macros {
        ZMK_MACRO(sleep,
            wait-ms = <500>;
            tap-ms = <10>;
            bindings
                = <&macro_tap &kp LG(X) &kp U &kp S>;
        )
        ZMK_MACRO(alt_tabber,  // adapted from @moutis on ZMK Discord
            wait-ms = <10>;
            tap-ms = <10>;
            bindings = <&macro_press &kp LALT>    // leave ALT down to keep menu up
                     , <&macro_tap &kp TAB>       // open the menu
                     , <&macro_pause_for_release> // wait until key release
                     , <&macro_tap &sk_at RALT>   // start timer to release ALT after timeout
                     , <&macro_release &kp LALT>; // now release the initial hold
        )
        ZMK_MACRO(hwp_won,
            wait-ms = <10>;
            tap-ms = <10>;
            bindings
                = <&macro_press &kp LALT>
                , <&macro_tap &kp N4 &kp N1 &kp N9 &kp N4 &kp N8>
                , <&macro_release &kp LALT>;
        ) 
        ZMK_MACRO(hwp_pn,
            wait-ms = <10>;
            tap-ms = <10>;
            bindings
                = <&macro_press &kp LALT>
                , <&macro_tap &kp N4 &kp N1 &kp N4 &kp N0 &kp N6>
                , <&macro_release &kp LALT>;
        )
        ZMK_MACRO(hwp_temp,
            wait-ms = <10>;
            tap-ms = <10>;
            bindings
                = <&macro_press &kp LALT>
                , <&macro_tap &kp N4 &kp N1 &kp N4 &kp N1 &kp N7>
                , <&macro_release &kp LALT>;
        )
        ZMK_MACRO(hwp_phi,
            wait-ms = <10>;
            tap-ms = <10>;
            bindings
                = <&macro_press &kp LALT>
                , <&macro_tap &kp N4 &kp N3 &kp N1 &kp N7 &kp N8>
                , <&macro_release &kp LALT>;
        )
        ZMK_MACRO(hwp_mg,
            wait-ms = <10>;
            tap-ms = <10>;
            bindings
                = <&macro_press &kp LALT>
                , <&macro_tap &kp N4 &kp N2 &kp N9 &kp N3 &kp N5>
                , <&macro_release &kp LALT>;
        )
      ZMK_MACRO(hwp_gram,
            wait-ms = <10>;
            tap-ms = <10>;
            bindings
                = <&macro_press &kp LALT>
                , <&macro_tap &kp N4 &kp N1 &kp N9 &kp N5 &kp N9>
                , <&macro_release &kp LALT>;
        )
        ZMK_MACRO(hwp_kg,
            wait-ms = <10>;
            tap-ms = <10>;
            bindings
                = <&macro_press &kp LALT>
                , <&macro_tap &kp N4 &kp N2 &kp N9 &kp N3 &kp N6>
                , <&macro_release &kp LALT>;
        )
        ZMK_MACRO(hwp_mm,
            wait-ms = <10>;
            tap-ms = <10>;
            bindings
                = <&macro_press &kp LALT>
                , <&macro_tap &kp N4 &kp N1 &kp N9 &kp N7 &kp N6>
                , <&macro_release &kp LALT>
                , <&macro_press &kp LALT>
                , <&macro_tap &kp N4 &kp N1 &kp N9 &kp N7 &kp N6>
                , <&macro_release &kp LALT>
                , <&macro_press &kp LALT>
                , <&macro_tap &kp N4 &kp N2 &kp N9 &kp N2 &kp N6>
                , <&macro_release &kp LALT>;                
        )
        ZMK_MACRO(hwp_vac,
            wait-ms = <10>;
            tap-ms = <10>;
            bindings
                = <&macro_tap &kp N2 &kp N2 &kp N0>
                , <&macro_press &kp LALT>
                , <&macro_tap &kp N4 &kp N1 &kp N9 &kp N4 &kp N2>
                , <&macro_release &kp LALT>
                , <&macro_press &kp LALT>
                , <&macro_tap &kp N4 &kp N1 &kp N9 &kp N2 &kp N1>
                , <&macro_release &kp LALT>
                , <&macro_press &kp LALT>
                , <&macro_tap &kp N4 &kp N1 &kp N9 &kp N2 &kp N3>
                , <&macro_release &kp LALT>;                
        )
        ZMK_MACRO(uni_middot,
            wait-ms = <10>;
            tap-ms = <10>;
            bindings
                = <&macro_tap &kp RALT &kp N0 &kp N0 &kp B &kp N7 &kp LA(X) &kp RALT>;
        )
    };
};
